<?xml version="1.0" encoding="UTF-8"?>
<!-- Relatório de Produtos com Agrupamento por Faixa de Preço -->
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ProductReport" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Variáveis de Relatório para cálculos de agrupamento -->
    <variable name="priceRange" class="java.lang.String">
        <variableExpression><![CDATA[
            $F{price} < 100 ? "Baixo (< R$ 100)" :
            $F{price} < 500 ? "Médio (R$ 100 - R$ 500)" :
            $F{price} < 1500 ? "Alto (R$ 500 - R$ 1.500)" :
            "Premium (> R$ 1.500)"
        ]]></variableExpression>
    </variable>

    <variable name="totalByRange" class="java.lang.Double" resetType="Group" resetGroup="priceGroup" calculation="Sum">
        <variableExpression><![CDATA[$F{price}]]></variableExpression>
    </variable>

    <variable name="countByRange" class="java.lang.Integer" resetType="Group" resetGroup="priceGroup" calculation="Count">
        <variableExpression><![CDATA[$F{id}]]></variableExpression>
    </variable>

    <variable name="totalAll" class="java.lang.Double" calculation="Sum">
        <variableExpression><![CDATA[$F{price}]]></variableExpression>
    </variable>

    <!-- Query da fonte de dados -->
    <queryString>
        <![CDATA[
            SELECT id, name, price
            FROM products
            ORDER BY price
        ]]>
    </queryString>

    <!-- Definição dos campos -->
    <field name="id" class="java.lang.Integer">
        <fieldDescription><![CDATA[id]]></fieldDescription>
    </field>
    <field name="name" class="java.lang.String">
        <fieldDescription><![CDATA[name]]></fieldDescription>
    </field>
    <field name="price" class="java.lang.Double">
        <fieldDescription><![CDATA[price]]></fieldDescription>
    </field>

    <!-- Grupo por Faixa de Preço -->
    <group name="priceGroup">
        <groupExpression><![CDATA[
            $V{priceRange}
        ]]></groupExpression>
        <groupHeader>
            <band height="30">
                <rectangle>
                    <reportElement x="0" y="0" width="555" height="25" backcolor="#E6E6FA"/>
                    <graphicElement/>
                </rectangle>
                <staticText>
                    <reportElement x="10" y="0" width="100" height="25"/>
                    <textElement verticalAlignment="Middle">
                        <font size="11" isBold="true"/>
                    </textElement>
                    <text><![CDATA[Faixa de Preço:]]></text>
                </staticText>
                <textField>
                    <reportElement x="110" y="0" width="445" height="25"/>
                    <textElement verticalAlignment="Middle">
                        <font size="11" isBold="true"/>
                    </textElement>
                    <textFieldExpression class="java.lang.String"><![CDATA[$V{priceRange}]]></textFieldExpression>
                </textField>
            </band>
        </groupHeader>
        <groupFooter>
            <band height="30">
                <staticText>
                    <reportElement x="250" y="5" width="80" height="20"/>
                    <textElement textAlignment="Right">
                        <font size="10" isBold="true"/>
                    </textElement>
                    <text><![CDATA[Subtotal:]]></text>
                </staticText>
                <textField pattern="R$ #,##0.00">
                    <reportElement x="330" y="5" width="100" height="20"/>
                    <textElement textAlignment="Right">
                        <font size="10" isBold="true"/>
                    </textElement>
                    <textFieldExpression class="java.lang.Double"><![CDATA[$V{totalByRange}]]></textFieldExpression>
                </textField>
                <staticText>
                    <reportElement x="430" y="5" width="70" height="20"/>
                    <textElement textAlignment="Right">
                        <font size="10" isBold="true"/>
                    </textElement>
                    <text><![CDATA[Qtd:]]></text>
                </staticText>
                <textField>
                    <reportElement x="500" y="5" width="55" height="20"/>
                    <textElement textAlignment="Center">
                        <font size="10" isBold="true"/>
                    </textElement>
                    <textFieldExpression class="java.lang.Integer"><![CDATA[$V{countByRange}]]></textFieldExpression>
                </textField>
                <line>
                    <reportElement x="0" y="25" width="555" height="1"/>
                </line>
            </band>
        </groupFooter>
    </group>

    <!-- Page Header -->
    <pageHeader>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30" forecolor="#000000"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Relatório de Produtos com Agrupamento por Faixa de Preço]]></text>
            </staticText>
        </band>
    </pageHeader>

    <!-- Column Headers -->
    <columnHeader>
        <band height="25" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="50" height="25" backcolor="#CCCCCC"/>
                <box leftPadding="5">
                    <topPen lineWidth="1.0" lineColor="#000000"/>
                    <leftPen lineWidth="1.0" lineColor="#000000"/>
                    <bottomPen lineWidth="1.0" lineColor="#000000"/>
                    <rightPen lineWidth="1.0" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement x="50" y="0" width="350" height="25" backcolor="#CCCCCC"/>
                <box leftPadding="5">
                    <topPen lineWidth="1.0" lineColor="#000000"/>
                    <leftPen lineWidth="1.0" lineColor="#000000"/>
                    <bottomPen lineWidth="1.0" lineColor="#000000"/>
                    <rightPen lineWidth="1.0" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Nome do Produto]]></text>
            </staticText>
            <staticText>
                <reportElement x="400" y="0" width="155" height="25" backcolor="#CCCCCC"/>
                <box leftPadding="5">
                    <topPen lineWidth="1.0" lineColor="#000000"/>
                    <leftPen lineWidth="1.0" lineColor="#000000"/>
                    <bottomPen lineWidth="1.0" lineColor="#000000"/>
                    <rightPen lineWidth="1.0" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Preço]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail Band -->
    <detail>
        <band height="20" splitType="Stretch">
            <textField>
                <reportElement x="0" y="0" width="50" height="20"/>
                <box leftPadding="5">
                    <topPen lineWidth="1.0" lineColor="#000000"/>
                    <leftPen lineWidth="1.0" lineColor="#000000"/>
                    <bottomPen lineWidth="1.0" lineColor="#000000"/>
                    <rightPen lineWidth="1.0" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression class="java.lang.Integer"><![CDATA[$F{id}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="50" y="0" width="350" height="20"/>
                <box leftPadding="5">
                    <topPen lineWidth="1.0" lineColor="#000000"/>
                    <leftPen lineWidth="1.0" lineColor="#000000"/>
                    <bottomPen lineWidth="1.0" lineColor="#000000"/>
                    <rightPen lineWidth="1.0" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <textField pattern="R$ #,##0.00">
                <reportElement x="400" y="0" width="155" height="20"/>
                <box leftPadding="5">
                    <topPen lineWidth="1.0" lineColor="#000000"/>
                    <leftPen lineWidth="1.0" lineColor="#000000"/>
                    <bottomPen lineWidth="1.0" lineColor="#000000"/>
                    <rightPen lineWidth="1.0" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression class="java.lang.Double"><![CDATA[$F{price}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Summary -->
    <summary>
        <band height="35">
            <staticText>
                <reportElement x="250" y="5" width="80" height="20"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Geral:]]></text>
            </staticText>
            <textField pattern="R$ #,##0.00">
                <reportElement x="330" y="5" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true" isUnderline="true"/>
                </textElement>
                <textFieldExpression class="java.lang.Double"><![CDATA[$V{totalAll}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="430" y="5" width="70" height="20"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Itens:]]></text>
            </staticText>
            <textField>
                <reportElement x="500" y="5" width="55" height="20"/>
                <textElement textAlignment="Center">
                    <font size="11" isBold="true" isUnderline="true"/>
                </textElement>
                <textFieldExpression class="java.lang.Integer"><![CDATA[$V{REPORT_COUNT}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>

